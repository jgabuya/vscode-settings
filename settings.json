  {
  "workbench.colorTheme": "One Dark Pro Bold",
  "editor.fontSize": 15,
  "editor.detectIndentation": false,
  "window.zoomLevel": 1,
  "explorer.openEditors.visible": 0,

  // Disable usage data and errors to be sent to a Microsoft online service.
  "telemetry.enableTelemetry": false,

  // show full path in title bar
  "window.title": "${activeEditorLong}${separator}${rootName}",

  // Controls if opened editors show as preview. Preview editors are reused until they are kept (e.g. via double click or editing) and show up with an italic font style.
  "workbench.editor.enablePreview": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.fontFamily": "Inconsolata, Monaco, Menlo, 'Courier New', monospace",
  "editor.tabSize": 2,
  "explorer.autoReveal": false,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Golang
  "go.lintTool":"golangci-lint",
  "go.lintFlags": [
    "--fast"
    ],
  "plantuml.java": "/usr/bin/java",
  "liveshare.featureSet": "insiders",
  "debug.node.autoAttach": "on",
  "files.insertFinalNewline": true,
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "git.enableSmartCommit": true,
  "go.formatTool": "gofmt",
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[rust]": {
    "editor.tabSize": 4
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "yaml.format.enable": true,
  "workbench.colorCustomizations": {}
}
